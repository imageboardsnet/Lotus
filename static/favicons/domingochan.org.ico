    <script type="text/javascript">
	var hours = 6  
	var minutes = 18  
	var seconds = 7  

  function countdown(){
  	seconds--;
  	if (seconds < 0){
  		minutes--;
  		seconds = 59
  	}
  	if (minutes < 0){
  		hours--;
  		minutes = 59
  	}
  	if (hours < 0){
  		hours = 23
  	}
  	
  	function pad(n) {
  		if ( n < 10 && n >= 0 ) {
  			return "0" + n;
  		} else {
  			return n;
  		}
  	}
  	
  	document.getElementById("contador").innerHTML = +pad(hours)+":"+pad(minutes)+":"+pad(seconds);
  	setTimeout ( "countdown()", 1000 );
    
  }
</script>

